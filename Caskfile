# Install native apps
# Usage: `brew cask Caskfile`

install caskroom/cask/brew-cask
tap caskroom/versions

# Apps
apps=(
  alfred
  appcleaner
  atom
  dash
  dropbox
  github-desktop
  google-chrome
  hipchat
  firefox
  flash
  intellij-idea
  iterm2
  java
  mysqlworkbench
  qlcolorcode
  qlmarkdown
  quicklook-json
  quip
  screenflick
  skype
  slack
  sourcetree
  spectacle
  spotify
  sublime-text
  teamviewer
  the-unarchiver
  vagrant
  virtualbox
  vlc
)

# Install apps to /Applications
# Default is: /Users/$user/Applications
echo "installing apps..."
cask install --appdir="/Applications" ${apps[@]}

# allow alfred to see installed apps
cask alfred link